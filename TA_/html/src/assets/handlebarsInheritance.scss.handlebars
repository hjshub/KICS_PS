{{#spritesheet}}
  @mixin icon { display: inline-block; background-image: url($sprite-url); background-repeat: no-repeat; background-size:
  {{px.width}}
  {{px.height}}
  } .icon { @include icon} .icon + em, .icon + b { margin-left:10px; position:relative; top:1px;}
{{/spritesheet}}

{{#sprites}}
  @mixin icon-{{name}}{ width:{{px.width}}; height:{{px.height}}; background-position:
  {{px.offset_x}}
  {{px.offset_y}}; } .icon-{{name}}
  { @include icon-{{name}}
  }
{{/sprites}}