{{#spritesheet}}
  @mixin icon { display: inline-block; background-image: url($sprite-url); background-repeat: no-repeat; background-size: calc({{px.width}}/
  2) calc({{px.height}}
  / 2); } .icon {@include icon;} .icon + em, .icon + b { margin-left:10px; position:relative; top:1px;}
{{/spritesheet}}

{{#sprites}}
  @mixin icon-{{name}}{ width:calc({{px.width}}
  / 2); height:calc({{px.height}}
  / 2); background-position: calc({{px.offset_x}}
  / 2) calc({{px.offset_y}}
  / 2); } .icon-{{name}}{@include icon-{{name}};}
{{/sprites}}