{{#spritesheet}}
  @mixin icon { display: inline-block; background-image: url($sprite-url); background-repeat: no-repeat; background-size: calc({{px.width}}/
  2) calc({{px.height}}
  / 2); } .icon {font-size:0;} .icon::before {@include icon; content:'';} .icon + em, .icon + b { margin-left:7px;} .column >
  .icon + em, .column > .icon + b { margin-left:0; }
{{/spritesheet}}

{{#sprites}}
  @mixin icon-{{name}}{ width:calc({{px.width}}
  / 2); height:calc({{px.height}}
  / 2); background-position: calc({{px.offset_x}}
  / 2) calc({{px.offset_y}}
  / 2); } .icon-{{name}}::before{@include icon-{{name}};}
{{/sprites}}